<UserControl x:Class="CompanyAnalyzerWpf.Views.EditCompanyDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="300" Height="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <TextBlock Text="{Binding CompanyViewModel.CompanyName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBlock>
            <DatePickerTextBox Text="{Binding CompanyViewModel.EstablishmentDate, StringFormat='dd/MM/yyyy', Mode=OneTime}"></DatePickerTextBox>
            <TextBlock Text="{Binding CompanyViewModel.Adress, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
