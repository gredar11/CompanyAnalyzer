<UserControl x:Class="CompanyAnalyzerWpf.Views.DepartmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompanyAnalyzerWpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource StandartTextBlock}"></Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel>

            <TextBlock Text="Department Name:" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Department.DepartmentName}"></TextBlock>
            <TextBlock Text="Company Name:" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding CompanyName}"></TextBlock>
            <TextBlock Text="Head Name:" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding HeadName}"></TextBlock>

        </StackPanel>
    </Grid>
</UserControl>
